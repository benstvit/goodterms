<h3><%= link_to user.first_name, user_path(user) %></h3>
<div class="mapboxgl-popup mapboxgl-popup-content">
    <ul>
      <% @loans.each do |loan| %>
        <% if user == loan.user && loan.item.user == current_user && loan.status == 'accepted' %>
          <li><%= loan.item.item_name %></li>
          <% end %>
        <% end %>
    </ul>
</div>
