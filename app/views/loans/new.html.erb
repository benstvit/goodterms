<%= simple_form_for [ @loan ] do |f| %>
    <%= simple_fields_for :item do |i| %>
      <%= i.input :item_name %>
      <%= i.input :description %>
    <% end %>
    <%= f.input :photo, as: :file %>
    <%= f.association :user, collection: User.first_name.order(:first_name), prompt: "Choose a User" %>
    <%= f.input :loan_date %>
    <%= f.input :return_date %>
    <%= f.submit "Create a loan", class: "btn btn-primary" %>
<% end %>
