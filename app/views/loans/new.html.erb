<%= simple_form_for [ @item ] do |f| %>
    <%= f.input :item_name %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= simple_fields_for :loan do |i| %>
      <%= i.association :user %>
      <%= i.input :loan_date %>
      <%= i.input :return_date %>
    <% end %>
    <%= f.submit "Create a loan", class: "btn btn-primary" %>
<% end %>
