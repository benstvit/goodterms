<%= simple_form_for [ @loan ] do |f| %>
  <%= simple_fields_for :item do |i| %>
    <%= i.input :item_name %>
    <%= i.input :description %>
    <%= i.input :img_url %>
  <% end %>
  <%= f.association :user %>
  <%= f.input :loan_date %>
  <%= f.input :return_date %>
  <%= f.submit "Create a loan", class: "btn btn-primary" %>
<% end %>
