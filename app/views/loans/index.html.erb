<div class="loan-index">
    <% @loans.each do |loan| %>
      <div class="loan-card">
        <%= cl_image_tag (loan.item.photo.key) %>
        <div class="loan-card-item-info">
          <%= loan.item.item_name %>
          <div class="loan-card-item-info-actions">
            <%='💌'%>
            <%='🔄'%>
            <%='⭐️'%>
          </div>
        </div>
      </div>
      <p>Status: <%= loan.status %></p>
      <p><%= link_to "Mark as Returned", loan_mark_path(loan), method: :patch, class: 'submit-btns' %></p>
    <% end %>
</div>
