<div class="form-container">
<h2>What are you borrowing?</h2>
  <%= simple_form_for(@loan, as: :loan, method: :post, url: loans_borrow_path) do |f| %>
      <%= simple_fields_for :item do |i| %>
        <%= i.input :item_name, label: "Borrowed item" %>
        <%= i.input :description, label: "Tell us more about that borrowed item" %>
        <%= i.input :user_id, collection: User.where.not(id: current_user), label: "Who's the lender?", :label_method => :full_name, value_method: :id, include_blank: false %>
      <% end %>
      <%= f.input :photo, as: :file %>
      <div data-controller="flatpickr"><%= f.input :return_date, label: "How long would you like to keep it?", as: :string, input_html: { class: "flatpickr-input" } %></div>
      <%= f.submit "Borrow this!", class: "btn borrow-btns p-3" %>
  <% end %>
</div>
