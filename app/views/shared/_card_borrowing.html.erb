<div class="card-borrowing">
  <div class="loan-card-image"><%= cl_image_tag (loan.item.photo.key) %></div>
  <p style="color: white; font-size: 40px;"><%= loan.item.item_name %></p>
  <div class="loan-card-item-info">
    <p><%="👤 Borrowed from #{loan.item.user.first_name}"%></p>
    <p><%= "#{rating(loan)}" %></p>
    <p><%="🎯 #{loan.return_date}" %></p>
    <p>📝</p>
    <p class='quote'><em><%="\"#{loan.item.description}\"" %><em></p>
  </div>
  <div class="loan-card-item-info-actions d-flex justify-content-between p-5">

    <button class="review-btn" title="Give a review">
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="white" class="bi bi-star" viewBox="0 0 16 16">
      <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
    </svg>
    </button>
    <div id="myModal" class="modal" data-controller="review">
      <div class="modal-content">
        <span class="close">&times;</span>
        <%= render 'shared/new_review', loan: loan %>
      </div>
    </div>
    <%= link_to user_path(loan.user), class: 'return-btn' do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="white" class="bi bi-chat-right-heart" viewBox="0 0 16 16">
        <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2Zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12Z"/>
        <path d="M8 3.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132Z"/>
      </svg>
    <% end %>
  </div>
</div>
