<div class="dashboard-container">
  <div class="loan-index" data-controller='modal'>
    <% lendings = user_lendings(current_user) %>
    <% lendings.each do |loan| %>
      <% unless loan.status == 'returned' %>
        <% if loan.id % 2 == 0  %>
          <div class="card-even-lending">
            <%= render '/shared/card_lending', loan: loan %>
          </div>
        <% else %>
          <div class="card-odd-lending">
            <%= render '/shared/card_lending', loan: loan %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <% borrowings = user_borrowings(current_user) %>
    <% borrowings.each do |loan| %>
      <% unless loan.status == 'returned' %>
        <% if loan.id % 2 == 0 %>
          <div class="card-even-borrowing">
            <%= render '/shared/card_borrowing', loan: loan %>
          </div>
        <% else %>
          <div class="card-odd-borrowing">
            <%= render '/shared/card_borrowing', loan: loan %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
