<div class="dashboard-container">
  <div class="loan-index">
    <% lendings = user_lendings(current_user) %>
    <% count = 0 %>
    <% lendings.each do |loan| %>
      <% unless loan.status == 'returned' %>
      <% count += 1 %>
        <% if count % 2 == 0  %>
          <div class="card-even-lending" data-controller='modal' data-modal-target="loan" data-name='<%= loan.user.first_name %>' data-id="<%= loan.id %>">
            <%= render '/shared/card_lending', loan: loan %>
          </div>
        <% else %>
          <div class="card-odd-lending" data-controller='modal' data-modal-target="loan" data-name='<%= loan.user.first_name %>' data-id="<%= loan.id %>">
            <%= render '/shared/card_lending', loan: loan %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <% borrowings = user_borrowings(current_user) %>
    <% count = 0 %>
    <% borrowings.each do |loan| %>
      <% unless loan.status == 'returned' %>
      <% count += 1 %>
        <% if count % 2 != 0 %>
          <div class="card-even-borrowing" data-controller='modal' data-modal-target="loan" data-id="<%= loan.id %>">
            <%= render '/shared/card_borrowing', loan: loan %>
          </div>
        <% else %>
          <div class="card-odd-borrowing" data-controller='modal' data-modal-target="loan" data-id="<%= loan.id %>">
            <%= render '/shared/card_borrowing', loan: loan %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
