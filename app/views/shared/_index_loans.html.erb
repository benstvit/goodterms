                <% elsif loan.user.reviews.length == 1 %>
                  <%= '⭐' %>
                <% else %>
                  <%= '😒' %>
                <% end %>
              </div>

            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card-odd">
          <% if loan.item.user == current_user %>
            <div class="card-lending">
              <div class="loan-card-image"><%= cl_image_tag (loan.item.photo.key) %></div>
